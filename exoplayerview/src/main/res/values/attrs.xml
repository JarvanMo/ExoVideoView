<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="showTimeout" format="integer" />
    <attr name="rewindIncrement" format="integer" />
    <attr name="fastForwardIncrement" format="integer" />

    <attr name="resizeMode" format="enum">
        <enum name="fit" value="0" />
        <enum name="fixed_width" value="1" />
        <enum name="fixed_height" value="2" />
        <enum name="none" value="3"/>
    </attr>

    <declare-styleable name="ExoVideoView">
        <attr name="useController" format="boolean" />
        <attr name="useTextureView" format="boolean" />
        <attr name="isPortrait" format="boolean" />
        <attr name="showTimeout" />
        <attr name="rewindIncrement" />
        <attr name="fastForwardIncrement" />
        <attr name="resizeMode" />
    </declare-styleable>


    <declare-styleable name="ExoVideoPlaybackControlView">
        <attr name="showTimeout" />
        <attr name="rewindIncrement" />
        <attr name="fastForwardIncrement" />
        <attr name="topWrapperTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SuperAspectRatioFrameLayout">
        <attr name="resizeMode" />
    </declare-styleable>

</resources>